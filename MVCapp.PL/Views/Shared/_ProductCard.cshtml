@model MVCapp.BLL.Dtos.Res.ProductDto

<div>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h4>Product</h4>
            <h5 class="card-title">Name : @Model.Name</h5>
            <h5 class="card-text">Category : @Model.Category</h5>
            <h6 class="card-text">Quantity : @Model.Quantity</h6>
            <h6 class="card-text">Price : @Model.Price</h6>
            <div><a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@Model.Id">
                    View
                </a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                    Edit
                </a>
                <span class="btn btn-danger text-white">

                    @Html.ActionLink(
                    "Delete",
                                        "Delete",
                                        new { id = Model.Id },
                                        new { onclick = "return confirm('You sure....?');" }
                                        )
                </span>
            </div>
        </div>
    </div>
</div>